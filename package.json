{
	"name": "elearnbd-node",
	"version": "1.0.0",
	"description": "ELearnBD NodeJS Back-end",
	"author": "ACCESS DENIED Team",
	"license": "ISC",
	"homepage": "https://github.com/AzShayak/elearnbd-node",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/AzShayak/elearnbd-node.git"
	},
	"bugs": {
		"url": "https://github.com/AzShayak/elearnbd-node/issues"
	},
	"keywords": [
		"elearnbd",
		"node",
		"express",
		"mongodb"
	],
	"engines": {
		"node": ">=10.0.0"
	},
	"main": "./src/server.js",
	"scripts": {
		"start": "node \"src/server.js\"",
		"dev": "nodemon",
		"debug": "ndb",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"dependencies": {
		"axios": "^0.22.0",
		"bcrypt": "^5.0.1",
		"body-parser": "^1.19.0",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.5",
		"cors": "^2.8.5",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"express-mongo-sanitize": "^2.1.0",
		"express-rate-limit": "^5.4.1",
		"helmet": "^4.6.0",
		"hpp": "^0.2.3",
		"html-to-text": "^8.0.0",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^6.0.11",
		"morgan": "^1.10.0",
		"multer": "^1.4.3",
		"nodemailer": "^6.7.0",
		"pug": "^3.0.2",
		"sharp": "^0.29.1",
		"slugify": "^1.6.1",
		"stripe": "^8.181.0",
		"validator": "^13.6.0",
		"xss-clean": "^0.1.1"
	},
	"devDependencies": {
		"eslint": "^7.32.0",
		"eslint-config-airbnb": "^18.2.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.24.2",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.26.1",
		"prettier": "^2.4.1"
	},
	"nodemonConfig": {
		"verbose": true,
		"delay": 1000,
		"ignore": [
			"test/*",
			"docs/*"
		]
	},
	"eslintConfig": {
		"extends": [
			"airbnb",
			"prettier",
			"plugin:node/recommended"
		],
		"plugins": [
			"prettier"
		],
		"rules": {
			"prettier/prettier": [
				"warn",
				{
					"endOfLine": "auto"
				}
			],
			"spaced-comment": "warn",
			"no-console": "warn",
			"consistent-return": "off",
			"func-names": [
				"warn",
				"as-needed"
			],
			"prefer-arrow-callback": "off",
			"object-shorthand": "warn",
			"prefer-object-spread": "off",
			"no-process-exit": "warn",
			"no-param-reassign": "warn",
			"no-return-await": "warn",
			"no-underscore-dangle": "off",
			"class-methods-use-this": "warn",
			"prefer-destructuring": [
				"warn",
				{
					"object": true,
					"array": false
				}
			],
			"no-unused-vars": [
				"warn",
				{
					"argsIgnorePattern": "req|res|next|val"
				}
			],
			"import/newline-after-import": [
				"warn",
				{
					"count": 1
				}
			]
		}
	},
	"prettier": {
		"printWidth": 105,
		"useTabs": true,
		"tabWidth": 4,
		"trailingComma": "all",
		"singleQuote": true
	}
}
